<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="bhp">

  <plone:static
      directory="stickers"
      type="stickers"
      name="BHP Stickers"/>

  <plone:static
      directory="reports"
      type="reports"
      name="BHP Reports"/>

  <browser:page
      for="bika.lims.interfaces.IAnalysisRequest"
      name="requisition"
      class="bhp.lims.browser.requisition.RequisitionFormPdf"
      permission="zope2.View"
      layer="bika.lims.interfaces.IBikaLIMS"
  />

  <browser:page
      for="bika.lims.interfaces.IAnalysisRequestsFolder"
      name="requisition"
      class="bhp.lims.browser.requisition.RequisitionFormPdf"
      permission="zope2.View"
      layer="bika.lims.interfaces.IBikaLIMS"
  />

  <browser:page
      for="bhp.lims.interfaces.ICouriers"
      name="folder_view"
      class="bhp.lims.browser.courierfolder.CourierFolderContentsView"
      permission="bika.lims.ManageBika"
      layer="bika.lims.interfaces.IBikaLIMS"
  />

</configure>
